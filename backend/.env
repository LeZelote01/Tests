# Production Database - PostgreSQL (Supabase/PlanetScale/Neon)
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration - CHANGEZ CES VALEURS EN PRODUCTION
SECRET_KEY=your-super-secure-production-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth2 Configuration (optionnel)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="AI Website Generator"
BACKEND_CORS_ORIGINS=["https://your-domain.vercel.app"]

# Environment
ENVIRONMENT=production
DEBUG=False

# External APIs (Phase 2 - optionnel)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# File Storage - Désactivé pour Vercel (environnement serverless)
# UPLOAD_DIRECTORY=./uploads
# MAX_FILE_SIZE=10485760